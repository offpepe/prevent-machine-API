{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "outDir": "./build",
    "rootDir": "src",
    "noEmitHelpers":false,
    "alwaysStrict": true,
    "emitDecoratorMetadata":true,
    "experimentalDecorators": true,
    "diagnostics": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave":false

}
